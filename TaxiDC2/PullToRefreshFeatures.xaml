<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PullToRefresh;assembly=Syncfusion.Maui.PullToRefresh"
             x:Class="TaxiDC2.PullToRefreshFeatures">
    <ContentPage.Content>
        <syncfusion:SfPullToRefresh x:Name="pullToRefresh"
                                    IsRefreshing="False">
            <syncfusion:SfPullToRefresh.PullableContent>
                <StackLayout Background="#00AFF9" Orientation="Vertical">
                    <Label Text="Temperature" FontSize="Large" TextColor="White" HorizontalTextAlignment="Center" Margin="20"/>
                    <Image  WidthRequest="100" HorizontalOptions="Center" HeightRequest="100"  Margin="20" Source="sunny.png"/>
                    <Label x:Name="lblTemp" FontSize="Large" TextColor="White" HorizontalTextAlignment="Center" Margin="20"/>
                </StackLayout>
            </syncfusion:SfPullToRefresh.PullableContent>
        </syncfusion:SfPullToRefresh>
    </ContentPage.Content>
</ContentPage>
