<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiDC2.MainPage">

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Fill">

            <Label
                Text="TAXI DC Login"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="LoginButton"
                Text="Login" 
                Clicked="OnLoginClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="InfoButton"
                Text="Login" 
                Clicked="OnInfoClicked"
                HorizontalOptions="Fill" />
            <!--<Button
                x:Name="ApiButton"
                Text="Call API" 
                Clicked="OnApiClicked"
                HorizontalOptions="Fill" />-->

            <Editor x:Name="editor" VerticalOptions="Fill" HorizontalOptions="Fill" MinimumHeightRequest="300"/>

        </VerticalStackLayout>

</ContentPage>
