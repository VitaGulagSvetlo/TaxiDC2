<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             x:Class="TaxiDC2.DetailAuto"
             Title="Detail Auta"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             x:DataType="vm:CarDetailViewModel">

    <Grid BackgroundColor="{StaticResource GridBG}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Padding="10" Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource GradientGray}" Offset="0.0" />
                    <GradientStop Color="{StaticResource GradientOrange}" Offset="1.1" />
                </LinearGradientBrush>
            </Grid.Background>
            <Label Text="DETAIL AUTA" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>

        <!-- Content Section -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="15" Padding="15" HorizontalOptions="FillAndExpand">

                <!-- Car Type -->
                <Frame Padding="15" CornerRadius="10" BackgroundColor="{StaticResource GradientGray}" HorizontalOptions="FillAndExpand">
                    <StackLayout Spacing="10">
                        <Label Text="Vůz:" FontSize="16" TextColor="{StaticResource CustomOrangeText}" />
                        <Entry Text="{Binding CarType}" FontSize="16" TextColor="{StaticResource TCwhite}" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </Frame>

                <!-- Color -->
                <Frame Padding="15" CornerRadius="10" BackgroundColor="{StaticResource GradientGray}" HorizontalOptions="FillAndExpand">
                    <StackLayout Spacing="10">
                        <Label Text="Barva:" FontSize="16" TextColor="{StaticResource CustomOrangeText}" />
                        <Entry Text="{Binding Color}" FontSize="16" TextColor="{StaticResource TCwhite}" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </Frame>

                <!-- License Plate -->
                <Frame Padding="15" CornerRadius="10" BackgroundColor="{StaticResource GradientGray}" HorizontalOptions="FillAndExpand">
                    <StackLayout Spacing="10">
                        <Label Text="SPZ:" FontSize="16" TextColor="{StaticResource CustomOrangeText}" />
                        <Entry Text="{Binding Rz}" FontSize="16" TextColor="{StaticResource TCwhite}" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </Frame>

                <!-- Save Button -->
                <Button Text="ULOŽIT ZMĚNY"
                        BackgroundColor="{StaticResource CustomOrangeBG}"
                        TextColor="Black"
                        FontSize="16"
                        VerticalOptions="EndAndExpand"
                        CornerRadius="10"
                        Command="{Binding SaveDataCmd}" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>