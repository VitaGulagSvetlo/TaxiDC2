<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:syncfusionList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             xmlns:models="clr-namespace:TaxiDC2.Models"
             x:Class="TaxiDC2.SeznamAut"
             x:DataType="vm:CarListViewModel"
             BackgroundColor="{StaticResource GridBG}"
             Title="Seznam Aut">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="NovÃ©" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>

    <Grid BackgroundColor="{StaticResource GridBG}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        
            <RowDefinition Height="*" />
            
        </Grid.RowDefinitions>

       
        

        <!-- Content Section -->
        <RefreshView Grid.Row="1" Command="{Binding LoadDataCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <syncfusionList:SfListView x:Name="listAut" ItemSize="85" ItemSpacing="5" ItemsSource="{Binding Items}" >
                <syncfusionList:SfListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Car">
                        <SwipeView>
                            <!-- swipe -->
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">

                                    <SwipeItem  IconImageSource="{FontImageSource Glyph={StaticResource info}, FontFamily=FAPro, Size=24, Color={StaticResource Bila}}"
                                                BackgroundColor="{StaticResource CustomOrangeBG}" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CarListViewModel}}, Path=ItemSelectedCommand}" CommandParameter="{Binding IdCar}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <!-- Item content -->
                            <Frame Style="{StaticResource CustomFrame}">
                                <Grid ColumnSpacing="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                   
                                    <!-- Car Type -->
                                    <Label Grid.Row="0" Grid.Column="0" Text="Typ:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource CustomOrangeText}" VerticalTextAlignment="Center" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding CarType}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalTextAlignment="Center" />

                                    <!-- Color -->
                                    <Label Grid.Row="1" Grid.Column="0" Text="Barva:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource CustomOrangeText}" VerticalTextAlignment="Center" />
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Color}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalTextAlignment="Center" />

                                    <!-- RZ -->
                                    <Label Grid.Row="2" Grid.Column="0" Text="SPZ:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource CustomOrangeText}" VerticalTextAlignment="Center" />
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Rz}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalTextAlignment="Center" />
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </syncfusionList:SfListView.ItemTemplate>
            </syncfusionList:SfListView>
        </RefreshView>
    </Grid>
</ContentPage>
