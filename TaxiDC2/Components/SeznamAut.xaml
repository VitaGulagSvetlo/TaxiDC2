<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:syncfusionList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             xmlns:models="clr-namespace:TaxiDC2.Models"
             x:Class="TaxiDC2.SeznamAut"
             Title="Seznam Aut">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nové vozidlo" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>

    <Grid BackgroundColor="{StaticResource GridBG}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Gradient strip row -->
            <RowDefinition Height="*" />
            <!-- Content row -->
        </Grid.RowDefinitions>

        <!-- Gradient Strip -->
        

        <!-- Content Section -->
        <RefreshView Grid.Row="1" Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <syncfusionList:SfListView x:Name="listAut" ItemSize="130" ItemSpacing="5" ItemsSource="{Binding Items}" ItemTapped="ListAut_OnItemTapped">
                <syncfusionList:SfListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Car">
                        <SwipeView>
                            <!-- Define swipe actions -->
                            <SwipeView.RightItems>
                                <SwipeItem Text="Detail" IconImageSource="info_icon.png" BackgroundColor="{StaticResource CustomOrangeBG}" Invoked="OnSwipeItemInvoked" CommandParameter="{Binding IdCar}" />
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItem Text="╳" BackgroundColor="Red" Invoked="OnSwipeItemInvoked" />
                            </SwipeView.LeftItems>
                            <!-- Item content -->
                            <Frame Style="{StaticResource CustomFrame}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1" />
                                    </Grid.RowDefinitions>
                                    <!-- Main Content -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                                        <HorizontalStackLayout  Spacing="15">
                                            <Label Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource CustomOrangeText}" Text="Auto:" />
                                            <Label Text="{Binding FullName}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout  Spacing="15">
                                            <Label Text="Typ:" Style="{StaticResource FS-16}" TextColor="{StaticResource CustomOrangeText}" FontAttributes="Bold" />
                                            <Label Text="{Binding CarType}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout  Spacing="15">
                                            <Label Text="Barva:" TextColor="{StaticResource CustomOrangeText}" Style="{StaticResource FS-16}" FontAttributes="Bold" />
                                            <Label Text="{Binding Color}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="15">
                                            <Label Style="{StaticResource FS-16}" TextColor="{StaticResource CustomOrangeText}" FontAttributes="Bold" Text="SPZ:" />
                                            <Label Text="{Binding Rz}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </StackLayout>

                                    <!-- Orange Line -->

                                    <BoxView Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="2" BackgroundColor="{StaticResource CustomOrangeBG}" HorizontalOptions="Fill"  />

                                </Grid>
                                
                            </Frame>

                        </SwipeView>
                    </DataTemplate>
                </syncfusionList:SfListView.ItemTemplate>
            </syncfusionList:SfListView>
        </RefreshView>
    </Grid>
</ContentPage>
