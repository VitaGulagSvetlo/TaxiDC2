<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusionList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:sfavatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             x:Class="TaxiDC2.SeznamJizd">

    <RefreshView  Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <Grid BackgroundColor="{StaticResource GridBG}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Padding="10">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource GradientGray}" Offset="0.0" />
                        <GradientStop Color="{StaticResource GradientOrange}" Offset="1.1" />
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Fill">
                    <!-- Avatar View aligned to the left -->
                    <!--<sfavatar:SfAvatarView       
                 ContentType="Custom"                          
                 HeightRequest="50"
                 CornerRadius="25"
                 WidthRequest="50" 
                 Stroke="Black"
                 StrokeThickness="1"
                 HorizontalOptions="Start" />-->

                    <!-- Other content aligned to the right -->
                    <StackLayout HorizontalOptions="EndAndExpand">
                        <HorizontalStackLayout>
                            <Label VerticalOptions="Center" FontSize="16" Text="Zobrazit pouze mé jízdy"></Label>
                            <buttons:SfSwitch/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </HorizontalStackLayout>

            </Grid>

            <!-- List -->
            <syncfusionList:SfListView x:Name="listJizdy" Grid.Row="1" ItemSize="190" ItemsSource="{Binding Items}">

                <syncfusionList:SfListView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Define swipe actions -->
                            <SwipeView.RightItems>
                                <SwipeItem Text="Detail" IconImageSource="info_icon.png"
                        BackgroundColor="{StaticResource CustomOrangeBG}" Invoked="OnSwipeItemInvoked"></SwipeItem>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItem Text="╳" BackgroundColor="Red" Invoked="OnSwipeItemInvoked"></SwipeItem>
                            </SwipeView.LeftItems>

                            <!-- Item content -->
                            <Frame CornerRadius="10" Padding="10" HasShadow="False" Margin="10,5" HeightRequest="180">
                                <Frame.Background>
                                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                                        <GradientStop Color="{StaticResource GradientGray}" Offset="0.0" />
                                        <GradientStop Color="{StaticResource GradientOrange}" Offset="1.1" />
                                    </LinearGradientBrush>
                                </Frame.Background>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="75" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Section (Main Info) -->
                                    <StackLayout Grid.Row="0" Grid.Column="0" Padding="5">
                                        <Frame  WidthRequest="100" HeightRequest="75" CornerRadius="5" BackgroundColor="{Binding TimeColor}">
                                            <FlexLayout Direction="Column"
            AlignItems="Center"
            JustifyContent="Center" 
            WidthRequest="40"                                            
            MinimumWidthRequest="40"
            MinimumHeightRequest="40"
            IsVisible="{Binding TimeVisible}"
            >
                                                <Label TextColor="Black" Text="{Binding MinToDeadLineTxt}" />
                                                <Label TextColor="Black" Text="Min" IsVisible="{Binding MinLabelVisible}"/>
                                            </FlexLayout>

                                        </Frame>
                                    </StackLayout>

                                    <!-- Main Content -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="0" Padding="0">
                                        <HorizontalStackLayout HorizontalOptions="Start">
                                            <Image Source="phone_icon.png" HeightRequest="30" />
                                            <Label Text="{Binding Customer.PhoneNumber}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout HorizontalOptions="Start">
                                            <Image Source="user_icon.png" HeightRequest="30" />
                                            <Label Text="{Binding Customer.Name}" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout HorizontalOptions="Start">
                                            <Image Source="calendar_icon.png" HeightRequest="30" />
                                            <Label Text="{Binding BoardingTime}" FontAttributes="Bold" Style="{StaticResource FS-16}" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </StackLayout>

                                    <!-- Orange Line -->
                                    <BoxView  Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="2" BackgroundColor="{StaticResource CustomOrangeBG}" HorizontalOptions="Fill" Margin="20, 0, 20, 0" />

                                    <!-- Bottom Section (Addresses) -->
                                    <StackLayout Grid.Row="2" Grid.Column="0" Padding="10">
                                        <Frame BackgroundColor="Purple" CornerRadius="50" Padding="0" WidthRequest="50" HeightRequest="50">
                                            <Label Style="{StaticResource FS-16}" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding Driver.Inicials}"></Label>
                                        </Frame>
                                    </StackLayout>
                                    <StackLayout Grid.Row="2" Grid.Column="1" Padding="5">
                                        <HorizontalStackLayout>
                                            <Image Source="start_icon.png" HeightRequest="30" />
                                            <Label Text="{Binding AddressBoarding}" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout>
                                            <Image Source="finish_icon.png" HeightRequest="30" />
                                            <Label Text="{Binding AddressExit}" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </StackLayout>

                                    <!-- Pravá strana -->
                                    <Frame Padding="10" Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" BackgroundColor="{Binding StateColor}" CornerRadius="10" WidthRequest="75" HeightRequest="150" >
                                        <StackLayout VerticalOptions="Center">
                                            <Image Source="{Binding StateImage}" HeightRequest="50" WidthRequest="50" VerticalOptions="Center" HorizontalOptions="Center" />


                                        </StackLayout>

                                    </Frame>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </syncfusionList:SfListView.ItemTemplate>
            </syncfusionList:SfListView>
        </Grid>
    </RefreshView>
</ContentPage>
