<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:syncfusionList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             x:Class="TaxiDC2.SeznamZakazniku"
             Title="Seznam Zákazníků">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nový zákazník" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>

    <RefreshView  Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <Grid BackgroundColor="{StaticResource GridBG}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>


            <!-- List -->
            <syncfusionList:SfListView x:Name="listZakaznici" Grid.Row="1" ItemSize="170" ItemSpacing="5" ItemsSource="{Binding Items}">

                <syncfusionList:SfListView.ItemTemplate>        
                    <DataTemplate>
                        <SwipeView>
                            <!-- Define swipe actions -->
                        <SwipeView.RightItems>
                                <SwipeItem Text="Detail" IconImageSource="info_icon.png"
                     BackgroundColor="{StaticResource CustomOrangeBG}" Invoked="OnSwipeItemInvoked"></SwipeItem>
                            </SwipeView.RightItems>
                        <SwipeView.LeftItems>
                            <SwipeItem Text="╳" BackgroundColor="Red" Invoked="OnSwipeItemInvoked" ></SwipeItem>
                            <!--<SwipeItem Text="dwadaw" BackgroundColor="Green" Invoked="OnSwipeItemInvoked"></SwipeItem>-->
                        </SwipeView.LeftItems>
                        <!-- Item content -->
                            <Frame CornerRadius="10" Padding="10" HasShadow="False" Margin="10,5" BackgroundColor="{StaticResource GradientGray}">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1" />

                                    </Grid.RowDefinitions>




                                    <!-- Main Content -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5" Padding="0">
                                        <HorizontalStackLayout  HorizontalOptions="CenterAndExpand" Spacing="5">
                                            <Label Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" Text="Telefonní číslo:"/>
                                            <Label Text="{Binding PhoneNumber}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout  HorizontalOptions="CenterAndExpand" Spacing="5">
                                            <Label Text="Jméno: " Style="{StaticResource FS-16}" FontAttributes="Bold"/>
                                            <Label Text="{Binding Name}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout  HorizontalOptions="CenterAndExpand" Spacing="5">
                                            <Label Text="VIP: " Style="{StaticResource FS-16}" FontAttributes="Bold"/>
                                            <buttons:SfCheckBox IsChecked="{Binding VIP}" CornerRadius="5.0"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">
                                            <Label Style="{StaticResource FS-16}" FontAttributes="Bold" Text="Zákaz:"/>
                                            <buttons:SfCheckBox IsChecked="{Binding Rejected}" CornerRadius="5.0" IsEnabled="False"/>
                                        </HorizontalStackLayout>
                                    </StackLayout>

                                    <!-- Orange Line -->
                                    <BoxView  Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="2" BackgroundColor="{StaticResource CustomOrangeBG}" HorizontalOptions="Fill" Margin="20, 0, 0, 0" />


                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </syncfusionList:SfListView.ItemTemplate>
            </syncfusionList:SfListView>
        </Grid>
    </RefreshView>
</ContentPage>
