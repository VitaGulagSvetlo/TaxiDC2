<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             x:DataType="vm:SignInViewModel"
             x:Class="TaxiDC2.Components.Login.SignInPage"
             Title="Login"
             BindingContext="vm"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             >
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="User email" Text="{Binding Email}"/>
        <Entry Placeholder="User password" Text="{Binding Password}"/>
        <Button Command="{Binding SignInCommand}" HorizontalOptions="Center" Text="Login"></Button>
        <Button Command="{Binding SignInGoogleCommand}" HorizontalOptions="Center" Text="G"></Button>

    </VerticalStackLayout>
</ContentPage>