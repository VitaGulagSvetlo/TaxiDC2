<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:syncfusionList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:vm="clr-namespace:TaxiDC2.ViewModels"
             xmlns:models="clr-namespace:TaxiDC2.Models"
             x:Class="TaxiDC2.SeznamRidicu"
             Title="Seznam Řidičů">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nový řidič" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>

    <RefreshView Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <Grid BackgroundColor="{StaticResource GridBG}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <syncfusionList:SfListView x:Name="listRidici" Grid.Row="1" ItemSize="250" ItemSpacing="5" ItemsSource="{Binding Items}">
                <syncfusionList:SfListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Driver">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem IconImageSource="{FontImageSource Glyph={StaticResource info}, FontFamily=FAPro, Size=24, Color={StaticResource Bila}}" 
                                           BackgroundColor="{StaticResource CustomOrangeBG}" 
                                           Invoked="OnSwipeRight_Detail" 
                                           CommandParameter="{Binding IdDriver}" />
                            </SwipeView.RightItems>

                            <Frame Style="{StaticResource CustomFrame}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1" />
                                    </Grid.RowDefinitions>

                                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5" Padding="0">
                                        <HorizontalStackLayout HorizontalOptions="Start" Spacing="15">
                                            <Label Text="Jméno:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" />
                                            <Label Text="{Binding FirstName}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout HorizontalOptions="Start" Spacing="15">
                                            <Label Text="Příjmení:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" />
                                            <Label Text="{Binding LastName}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout HorizontalOptions="Start" Spacing="15">
                                            <Label Text="Telefonní číslo:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" />
                                            <Label Text="{Binding PhoneNumber}" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource TCwhite}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Start">
                                            <Label Text="Vozidlo:" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" />
                                            <Label Text="{Binding Car.Rz}" TextColor="{StaticResource Bila}" Style="{StaticResource FS-16}" FontAttributes="Bold" />
                                            <Label Text="{Binding Car.Color}" TextColor="{StaticResource Bila}" Style="{StaticResource FS-16}" FontAttributes="Bold" />
                                            <Label Text="{Binding Car.CarType}" TextColor="{StaticResource Bila}" Style="{StaticResource FS-16}" FontAttributes="Bold" />
                                        </HorizontalStackLayout>
                                        <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                                            <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Start" Spacing="10">
                                                <Label Text="Aktivni " Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" VerticalOptions="Center" />
                                                <Switch IsToggled="{Binding Active}" HorizontalOptions="End" VerticalOptions="Center" Toggled="Switch1_OnToggled" 
                                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type vm:DriverListViewModel}}, Path=IsAdmin}" />
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Start" Spacing="10">
                                                <Label Text="Notifikace" Style="{StaticResource FS-16}" FontAttributes="Bold" TextColor="{StaticResource Oranzova}" VerticalOptions="Center" />
                                                <Switch IsToggled="{Binding NotificationEnable}" HorizontalOptions="End" VerticalOptions="Center" Toggled="Switch1_OnToggled" 
                                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type vm:DriverListViewModel}}, Path=IsAdmin}" />
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>

                                    <BoxView Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="2" BackgroundColor="{StaticResource Oranzova}" HorizontalOptions="Fill" />
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </syncfusionList:SfListView.ItemTemplate>
            </syncfusionList:SfListView>
        </Grid>
    </RefreshView>
</ContentPage>
