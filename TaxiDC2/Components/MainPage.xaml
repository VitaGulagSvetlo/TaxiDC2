<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TaxiDC2.Models"
             x:Class="TaxiDC2.MainPage"
             x:DataType="models:Driver"
             Title="TAXI DC 2">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style  TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource ZlutaTmava}" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            </Style>
            <Style  TargetType="Button">
                <Setter Property="TextColor" Value="{StaticResource ZlutaTmava}" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="MinimumHeightRequest" Value="80"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="{StaticResource GridBG}">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="20">

                    <Label
                            Text="TAXI DC"
                            SemanticProperties.HeadingLevel="Level1" 
                            FontSize="30"
                            Style="{StaticResource CustomLblO}"/>
                    <Button Text="Nová jízda" Clicked="OnNewClicked"   
                  Style="{StaticResource MenuBtn}" ImageSource="{FontImageSource Glyph={StaticResource star}, FontFamily=FAPro, Size=24, Color={StaticResource Oranzova}}"/>
                    <Button Text="Přehled jízd" Clicked="OnListClicked"   
                   Style="{StaticResource MenuBtn}" ImageSource="{FontImageSource Glyph={StaticResource route}, FontFamily=FAPro, Size=24, Color={StaticResource Oranzova}}"/>
                    <Button Text="Settings" Clicked="OnSetClicked"   
                   Style="{StaticResource MenuBtn}" ImageSource="{FontImageSource Glyph={StaticResource gear}, FontFamily=FAPro, Size=24, Color={StaticResource Oranzova}}"/>

                </VerticalStackLayout>
            </ScrollView>

            <Frame Style="{StaticResource CustomFrame}" VerticalOptions="End" Grid.Row="1"  Margin="20">
                <StackLayout Spacing="5">
                    <Label Text="Aktivní řidič" Style="{StaticResource CustomLblO}" />
                    <HorizontalStackLayout Spacing="5">
                        <Image Source="{FontImageSource Glyph={StaticResource user}, FontFamily=FAPro, Size=20, Color={StaticResource Oranzova}}" />
                        <Label Text="{Binding FullName,FallbackValue='nepřiřazen'}" FontSize="18" TextColor="{StaticResource Bila}" Padding="5,0"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Image Source="{FontImageSource Glyph={StaticResource car}, FontFamily=FAPro, Size=20, Color={StaticResource Oranzova}}" />
                        <Label Text="{Binding Car.FullName,FallbackValue='---'}" FontSize="18" TextColor="{StaticResource Bila}"  Padding="5,0"/>
                    </HorizontalStackLayout>
                </StackLayout>
            </Frame>

        <!-- Label na spodku obrazovky -->
        <Label
            Grid.Row="2"
            Text="ver. 0.3 alfa"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="End"
            Padding="5"
            BackgroundColor="LightGray"
            FontSize="12"
            HorizontalTextAlignment="Start"
            VerticalTextAlignment="Center"
        />
    </Grid>
</ContentPage>

    
    