<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaxiDC2"
             xmlns:popup ="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"           
             x:Class="TaxiDC2.PopupFeatures">
    <ContentPage.Content>
        <StackLayout Padding="0" HorizontalOptions="Center" VerticalOptions="Center">
            <popup:SfPopup x:Name="Popup"/>
            <Button Text="Display Popup" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
